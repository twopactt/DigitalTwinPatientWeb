@page
@model HomeModel
@inject DigitalTwinPatientWeb.Services.PatientService PatientService

@{
    string patientName = Model.PatientName ?? "Пациент";
}

<h2>Добрый день, @patientName!</h2>

<div class="row mt-4">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">Сводка за сегодня</div>
            <div class="card-body">
                <ul>
                    <li>Последние показатели: Глюкоза: 5.6, Давление: 120/80</li>
                    <li>Активные назначения: 3 препаратов</li>
                    <li>Предстоящие визиты: 2 на этой неделе</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">Быстрые действия</div>
            <div class="card-body d-flex flex-column gap-2">
                <button class="btn btn-primary">Добавить показатели</button>
                <button class="btn btn-success">Отметить прием лекарства</button>
                <button class="btn btn-warning">Записать симптомы</button>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">Мои показатели</div>
    <div class="card-body">
        <div class="mb-3">
            <label>Выбор периода:</label>
            <select class="form-select w-auto d-inline-block">
                <option>За сегодня</option>
                <option>За неделю</option>
                <option>За месяц</option>
            </select>
        </div>
        <form>
            <div class="row mb-3">
                <div class="col-md-2">
                    <label>Глюкоза (ммоль/л)</label>
                    <input type="range" min="2" max="20" step="0.1" class="form-range">
                </div>
                <div class="col-md-2">
                    <label>Давление систолическое</label>
                    <input type="number" min="60" max="250" class="form-control">
                </div>
                <div class="col-md-2">
                    <label>Давление диастолическое</label>
                    <input type="number" min="40" max="150" class="form-control">
                </div>
                <div class="col-md-2">
                    <label>Пульс</label>
                    <input type="number" min="40" max="180" class="form-control">
                </div>
                <div class="col-md-2">
                    <label>Вес (кг)</label>
                    <input type="number" step="0.1" class="form-control">
                </div>
                <div class="col-md-2">
                    <label>Комментарий</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить показатели</button>
        </form>

        <div class="mt-4">
            <h6>График динамики показателей (интерактивный)</h6>
            <div class="border p-3">[Здесь будет график]</div>
            <h6 class="mt-3">История измерений</h6>
            <div class="border p-3">[Здесь будет таблица]</div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">Назначения</div>
    <div class="card-body">
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Парацетамол, 500мг, 08:00
                <button class="btn btn-sm btn-success">Принято</button>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Амоксициллин, 250мг, 12:00
                <button class="btn btn-sm btn-success">Принято</button>
            </li>
        </ul>
        <div>
            <strong>Статистика приверженности лечению:</strong> 80%
        </div>
    </div>
</div>
